
#---[ Library configuration ]------------------------------------------------------------

PACKAGE_NAME=@PACKAGE_NAME@
SONAME=@SONAME@

MODULE_SOURCES= \
	$(wildcard src/library/*.cc) \
	$(wildcard src/library/os/@OSNAME@/*.cc) \
	$(wildcard src/library/os/@OSNAME@/*.rc) \
	$(wildcard src/module/*.cc)

TEST_SOURCES= \
	$(wildcard src/testprogram/*.cc) 

#	Disable due to some windows 'craziness' (Error 'Acessing a corrupted library' when enabled)
#	$(wildcard src/testprogram/@OSNAME@/*.rc)

#---[ Tools ]----------------------------------------------------------------------------

CXX=@CXX@
LD=@CXX@
LN_S=@LN_S@
MKDIR=@MKDIR_P@
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
XGETTEXT=@XGETTEXT@
MSGCAT=@MSGCAT@
WINDRES=@WINDRES@
AR=@AR@
VALGRIND=@VALGRIND@
DLLTOOL=@DLLTOOL@

#---[ Paths ]----------------------------------------------------------------------------

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libdir=@libdir@
includedir=@includedir@
datarootdir=@datarootdir@
localedir=@localedir@
docdir=@docdir@
sysconfdir=/etc

BASEDIR=@BASEDIR@
DLL_LDFLAGS=@DLL_LDFLAGS@

OBJDIR=.obj
OBJDBG=$(OBJDIR)/Debug
OBJRLS=$(OBJDIR)/Release

BINDIR=$(BASEDIR)/.bin
BINDBG=$(BINDIR)/Debug
BINRLS=$(BINDIR)/Release

#---[ Rules ]----------------------------------------------------------------------------

DEPENDS= \
	Makefile

CFLAGS= \
	@CXXFLAGS@ \
	-Isrc/include \
	-DBUILD_DATE=`date +%Y%m%d` \
	@UDJAT_CFLAGS@ \
	@SYSTEMD_CFLAGS@ \
	@DBUS_CFLAGS@

LDFLAGS=\
	@LDFLAGS@

LIBS= \
	@LIBS@ \
	@UDJAT_LIBS@ \
	@SYSTEMD_LIBS@ \
	@DBUS_LIBS@

#---[ Debug Rules ]----------------------------------------------------------------------

$(OBJDBG)/%.o: \
	%.cc \
	$(DEPENDS)

	@echo $< ...
	@$(MKDIR) $(@D)

	@$(CXX) \
		$(CFLAGS) \
		-DDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-Wall -Wextra -fstack-check \
		-DDEBUG=1 \
		-o $@ \
		-c $<

$(OBJDBG)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(@D)
	@$(WINDRES) $< -O coff -o $@

#---[ Release Rules ]--------------------------------------------------------------------

$(OBJRLS)/%.o: \
	%.cc \
	$(DEPENDS)

	@echo $< ...
	@$(MKDIR) $(@D)

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-o $@ \
		-c $<

$(OBJRLS)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(@D)
	@$(WINDRES) $< -O coff -o $@

#---[ Release Targets ]------------------------------------------------------------------

all: \
	$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@

Release: \
	$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@

$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@: \
	$(foreach SRC, $(basename $(MODULE_SOURCES)), $(OBJRLS)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-shared \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		$(LIBS) @PUGIXML_LIBS@


#---[ Install Targets ]------------------------------------------------------------------

install: \
	$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@

	@$(MKDIR) \
		$(DESTDIR)@MODULE_PATH@

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@ \
		$(DESTDIR)@MODULE_PATH@/$(PACKAGE_NAME)@LIBEXT@

	
#---[ Uninstall Targets ]----------------------------------------------------------------

uninstall:

	@rm -f \
		$(DESTDIR)@MODULE_PATH@/$(PACKAGE_NAME)@LIBEXT@

#---[ Debug Targets ]--------------------------------------------------------------------

Debug: \
	$(BINDBG)/udjat@EXEEXT@

$(BINDBG)/udjat@EXEEXT@: \
	$(BINDBG)/$(PACKAGE_NAME)@LIBEXT@ \
	$(foreach SRC, $(basename $(TEST_SOURCES)), $(OBJDBG)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-o $@ \
		$^ \
		-L$(BINDBG) \
		-Wl,-rpath,$(BINDBG) \
		$(LDFLAGS) \
		$(LIBS) @PUGIXML_LIBS@


$(BINDBG)/$(PACKAGE_NAME)@LIBEXT@: \
	$(foreach SRC, $(basename $(MODULE_SOURCES)), $(OBJDBG)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-shared \
		-Wl,-rpath,$(BINDBG) \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		$(LIBS) @PUGIXML_LIBS@

run: \
	$(BINDBG)/udjat@EXEEXT@

	@cp "test.xml" "$(BINDBG)"

ifeq ($(VALGRIND),no)

	@LD_LIBRARY_PATH=$(BINDBG) \
		$(BINDBG)/udjat@EXEEXT@ -f

else
	@touch valgrind.suppression

	@LD_LIBRARY_PATH=$(BINDBG) \
		$(VALGRIND) --leak-check=full --track-origins=yes --gen-suppressions=all --suppressions=valgrind.suppression \
		$(BINDBG)/udjat@EXEEXT@ -f
endif

#---[ Clean Targets ]--------------------------------------------------------------------

clean: \
	cleanDebug \
	cleanRelease

cleanDebug:

	@rm -fr $(OBJDBG)
	@rm -fr $(BINDBG)

cleanRelease:

	@rm -fr $(OBJRLS)
	@rm -fr $(BINRLS)

clean: \
	cleanDebug \
	cleanRelease


-include $(foreach SRC, $(basename $(MODULE_SOURCES) $(TEST_SOURCES)), $(OBJDBG)/$(SRC).d)
-include $(foreach SRC, $(basename $(MODULE_SOURCES) $(TEST_SOURCES)), $(OBJRLS)/$(SRC).d)


